<section>
  <div class="container">
    <div class="page-header my-3">
      <a href="/dashboard" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-layer-group"></i> Dashboard</a>
      <a href="/register" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-plus"></i> Add user</a>
    </div>
  </div>

  <!-- page container -->
  <div class="container">
    <div class="row">
      <!-- page main content -->
      <div class="col-lg-9 col-md-12">
        <div class="main border rounded" style="padding: 10px 20px">
          <div class="row">
            <% userData.forEach(user => { %>
            <div class="col-lg-4 col-mg-3 p-2">
              <div class="card user-wrapper p-2">
                <div class="user-image">
                  <img class="img-fluid img-rounded" src="<%= user.profile_photo %>" alt="" />
                  <a href="/single/<%= user.slug %>" class="btn btn-warning view-details">View Details</a>
                </div>
                <div class="user-info py-2">
                  <h5 class="card-title mt-1 mb-0"><%= user.name %></h5>
                  <p class="card-text"><%= user.bio %></p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <!-- side bar -->
      <div class="col-lg-3 col-md-12">
        <div class="main border rounded" style="padding: 15px 15px 0 15px">
          <div class="row">
            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/ads.webp" alt="" />
              </a>
            </div>
            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/1.gif" alt="" />
              </a>
            </div>

            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/3.gif" alt="" />
              </a>
            </div>

            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/2.gif" alt="" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
