<section>
  <div class="container">
    <div class="page-header my-3">
      <a href="/dashboard" class="btn btn-danger px-4 mx-1"> <i class="fa fa-history" aria-hidden="true"></i> Back</a>
      <a href="/dashboard" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-layer-group"></i> Dashboard</a>
      <a href="/users" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-users"></i> All Users</a>
    </div>
  </div>

  <!-- page container -->
  <div class="container">
    <div class="row">
      <!-- page main content -->
      <div class="col-lg-9 col-md-12">
        <div class="main border rounded mb-5" style="padding: 10px 20px">
          <div class="single-banner banner_image_preview" style="background-image: url('<%= user.banner_photo %>')">
            <div class="single-header">
              <div class="row align-items-center">
                <div class="col-lg-3">
                  <div class="user-single-image">
                    <img class="profile_image_preview" src="<%= user.profile_photo %>" alt="" />
                  </div>
                </div>
                <div class="col-lg-9">
                  <div class="info ms-4">
                    <h1 class="text-white name_preview"><%= user.name %></h1>
                    <p class="text-white bio_preview"><%= user.bio %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="add-user-page" style="margin-top: 80px">
            <!-- contact form -->
            <div class="add-user-form"></div>
            <form
              id="edit"
              action="/edit/<%= user.id %>"
              method="POST"
              enctype="multipart/form-data"
              class="border py-3 px-4 rounded mb-3"
              style="background: #5c689109"
            >
              <div class="mb-3">
                <h3>Update user info</h3>
              </div>
              <div class="mb-3"><input type="text" class="form-control mt-3" name="name" value="<%= user.name %>"" placeholder="Name" maxlength="30" /></div>
              <div class="mb-3">
                <input type="email" class="form-control" value="<%= user.email %>" name="email" placeholder="Email" />
              </div>

              <div class="mb-3">
                <input type="text" class="form-control" value="<%= user.bio %>" name="bio" placeholder="Bio" minlength="30" maxlength="100" />
              </div>

              <!-- image upload field -->
              <div class="row">
                <div class="col-lg-6 mb-3">
                  <label class="text-muted" for="profile_image">Profile image</label>
                  <input type="file" class="form-control profile_image_field" name="profile_image" id="profile_image " />
                </div>
                <div class="col-lg-6 mb-3">
                  <label class="text-muted" for="banner_image">Banner image</label>
                  <input
                    type="file"
                    class="form-control banner_image_field"
                    value="<%= user.banner_image %>"
                    name="banner_image"
                    id="banner_image"
                    accept="image/*"
                  />
                </div>
              </div>

              <div class="mb-3">
                <textarea class="form-control" id="about-text" name="about" rows="10" minlength="500" placeholder="About text"><%= user.about %></textarea>
              </div>

              <!-- social links fields -->
              <div class="row">
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-facebook-f"></i></span>
                    <input type="text" class="form-control" value="<%= user.social.facebook %>" name="facebook" placeholder="Username" />
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-twitter"></i></span>
                    <input type="text" class="form-control" value="<%= user.social.twitter %>" name="twitter" placeholder="Username" />
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-instagram"></i></span>
                    <input type="text" class="form-control" name="instagram" value="<%= user.social.instagram %>" placeholder="Username" />
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-linkedin"></i></span>
                    <input type="text" class="form-control" name="linkedin" value="<%= user.social.linkedin %>" placeholder="Username" />
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-youtube"></i></span>
                    <input type="text" class="form-control" name="youtube" value="<%= user.social.youtube %>" placeholder="Username" />
                  </div>
                </div>
                <div class="col-lg-4">
                  <div class="input-group mb-3">
                    <span class="input-group-text"><i class="fa-brands fa-github"></i></span>
                    <input type="text" class="form-control" name="github" value="<%= user.social.github %>" placeholder="Username" />
                  </div>
                </div>
              </div>

              <div class="social-links">
                <div class="social-icon-group">
                  <ul class="social-on-register-page">
                    <li class="facebook">
                      <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                    </li>
                    <li class="twitter">
                      <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    </li>
                    <li class="instagram">
                      <a href="#"><i class="fa-brands fa-instagram"></i></a>
                    </li>
                    <li class="linkedin">
                      <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                    </li>
                    <li class="youtube">
                      <a href="#"><i class="fa-brands fa-youtube"></i></a>
                    </li>
                    <li class="github">
                      <a href="#"><i class="fa-brands fa-github"></i></a>
                    </li>
                  </ul>
                </div>
              </div>

              <div class="mb-3" style="margin-top: -15px">
                <button type="submit" class="btn btn-primary px-5">Update user</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- side bar -->
      <div class="col-lg-3 col-md-12">
        <div class="main border rounded" style="padding: 15px 15px 0 15px">
          <div class="row">
            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/ads.webp" alt="" />
              </a>
            </div>
            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/1.gif" alt="" />
              </a>
            </div>

            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/3.gif" alt="" />
              </a>
            </div>

            <div class="ads">
              <a href="https://developerzahir.com" target="_blank">
                <img class="img-fluid rounded mb-3" src="/assets/img/2.gif" alt="" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
