<section class="">
  <div class="container">
    <div class="page-header my-3">
      <a href="/register" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-plus"></i> Add user</a>
      <a href="/users" class="btn btn-primary px-4 mx-1"> <i class="fa-solid fa-users"></i> All Users</a>
    </div>
  </div>

  <!-- page container -->
  <div class="container">
    <div class="row">
      <!-- page main content -->
      <div class="col-lg-12 col-md-12">
        <div class="main border rounded mb-5 table-responsive shadow-sm p-3" style="padding: 10px 20px">
          <table id="product-table" class="table align-middle">
            <thead>
              <tr>
                <th>#</th>
                <th>Photo</th>
                <th>Name</th>
                <th>Email</th>
                <th>Bio</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% userData.forEach((user, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td>
                  <img class="profile-image" style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px" src="<%= user.profile_photo %>" alt="" />
                </td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td style="width: 350px; overflow-x: auto; height: 40px"><%= user.bio %></td>
                <td>
                  <a href="/single/<%= user.slug %>" class="view btn btn-primary btn-sm"><i class="fa-solid fa-eye"></i></a>
                  <a href="/edit/<%= user.id %>" class="edite btn btn-warning btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                  <a href="/user-delete/<%= user.id %> " class="delete btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
